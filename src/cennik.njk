---
title: Cennik
description: Zapraszamy do zapoznania się z naszym cennikiem
layout: "templates/base.njk"
---

<section class="home6-pricing-table pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="title-style-4 text-center">
                    <span class="bixol-subtitle before-line">Kajaki24 Warka</span>
                    <h2>Trasy jednodniowe</h2>
                </div>
            </div>
        </div>
        <div class="home6-pricing">
            <div class="row justify-content-center">
                {% for post in collections.cennik['Trasy jednodniowe'] %}
                <div class="col-lg-4 col-md-6">
                    <div class="home6-pricing-column">
                        <div class="h6-headline">
                            <h4>
                                {{ post.data.title }}
                            </h4>
                        </div>
                        <div class="feature-list">
                            <ul>
                                <li>Czas spływu: {{ post.data.rafting_time }}h</li>
                                <li>Długość trasy: {{ post.data.route_length }}km</li>
                            </ul>
                        </div>
                        <div class="price-area">
                            <h2>{{ post.data.price }}zł</h2>
                        </div>
                        <div class="price-btn">
                            <a href="#">Zarezerwuj</a>
                        </div>
                    </div>
                </div>
                {%- endfor -%}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="title-style-4 text-center">
                    <span class="bixol-subtitle before-line">Kajaki24 Warka</span>
                    <h2>Trasy dwudniowe</h2>
                </div>
            </div>
        </div>
        <div class="home6-pricing">
            <div class="row justify-content-center">
                {% for post in collections.cennik['Trasy dwudniowe'] %}
                <div class="col-lg-4 col-md-6">
                    <div class="home6-pricing-column">
                        <div class="h6-headline">
                            <h4>
                                {{ post.data.title }}
                            </h4>
                        </div>
                        <div class="feature-list">
                            <ul>
                                <li>Czas spływu: {{ post.data.rafting_time }}h</li>
                                <li>Długość trasy: {{ post.data.route_length }}km</li>
                            </ul>
                        </div>
                        <div class="price-area">
                            <h2>{{ post.data.price }}zł</h2>
                        </div>
                        <div class="price-btn">
                            <a href="#">Zarezerwuj</a>
                        </div>
                    </div>
                </div>
                {%- endfor -%}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="title-style-4 text-center">
                    <span class="bixol-subtitle before-line">Kajaki24 Warka</span>
                    <h2>Trasy trzydniowe</h2>
                </div>
            </div>
        </div>
        <div class="home6-pricing">
            <div class="row justify-content-center">
                {% for post in collections.cennik['Trasy trzydniowe'] %}
                <div class="col-lg-4 col-md-6">
                    <div class="home6-pricing-column">
                        <div class="h6-headline">
                            <h4>
                                {{ post.data.title }}
                            </h4>
                        </div>
                        <div class="feature-list">
                            <ul>
                                <li>Czas spływu: {{ post.data.rafting_time }}h</li>
                                <li>Długość trasy: {{ post.data.route_length }}km</li>
                            </ul>
                        </div>
                        <div class="price-area">
                            {% if post.data.price %}
                                <h2>{{ post.data.price }}zł</h2>
                            {% else %}
                                <div class="liquid-price">
                                    <h5>Cena do uzgodnienia</h5>
                                </div>
                            {% endif %}
                        </div>
                        <div class="price-btn">
                            <a href="#">Zarezerwuj</a>
                        </div>
                    </div>
                </div>
                {%- endfor -%}
            </div>
        </div>

    </div>
</section>